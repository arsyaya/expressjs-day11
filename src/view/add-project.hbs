<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- cdn bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <!-- cdn fontawesome icon -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- bundle min js bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <title>ArsWeb | Project</title>
  </head>
  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-secondary">
      <div class="container">
        <img style="width: 50px" src="image/logo.png" alt="brand-logo" />
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-3">
            <li class="nav-item">
              <a
                class="nav-link me-2 fs-5 text-light"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link fw-bold fs-5 text-light active"
                href="/add-project"
              >Add Project</a>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <a class="btn btn-info text-light" href="/contact">Contact Me</a>
          </form>
        </div>
      </div>
    </nav>
    <!-- navbar end -->

    <!-- form -->
    <form action="add-project" method="post" class="container mt-5">
      <div class="mb-2">
        <label for="name" class="form-label fs-5">Project Name</label>
        <input type="text" class="form-control" id="name" name="name" />
      </div>
      <div class="row g-3 mb-2">
        <div class="col-md-6">
          <label for="s-date" class="form-label fs-5">Start Date</label>
          <input type="date" class="form-control" id="s-date" />
        </div>
        <div class="col-md-6">
          <label for="e-date" class="form-label fs-5">End Date</label>
          <input type="date" class="form-control" id="e-date" />
        </div>
        <div mb-2>
          <label for="desc" class="form-label fs-5">Description</label>
          <textarea
            class="form-control"
            id="desc"
            name="desc"
            style="height: 200px; resize: none"
          ></textarea>
        </div>
        <div class="mb-2">
          <label class="mb-2 fs-5">Technologies</label>
          <br />
          <div class="form-check form-check-inline me-5">
            <input
              class="form-check-input"
              type="checkbox"
              id="nodejs"
              value="option1"
            />
            <label class="form-check-label" for="nodejs">Node Js</label>
          </div>
          <div class="form-check form-check-inline ms-5">
            <input
              class="form-check-input"
              type="checkbox"
              id="nextjs"
              value="option2"
            />
            <label class="form-check-label" for="nextjs">Next Js</label>
          </div>
          <div>
            <div class="form-check form-check-inline me-5">
              <input
                class="form-check-input"
                type="checkbox"
                id="reactjs"
                value="option1"
              />
              <label class="form-check-label" for="reactjs">Ract Js</label>
            </div>
            <div class="form-check form-check-inline ms-5">
              <input
                class="form-check-input"
                type="checkbox"
                id="typescript"
                value="option2"
              />
              <label
                class="form-check-label"
                for="typescript"
              >TypeScript</label>
            </div>
          </div>
          <div class="mt-3">
            <label class="fs-5">Upload Image</label>
            <div class="input-group mt-1">
              <input type="file" class="form-control" id="image" />
              <label class="input-group-image" for="image"><img
                  src="image/file.png"
                  alt="file"
                  style="padding: 5px"
                /></label>
            </div>
          </div>
          <div class="button mt-4 d-flex justify-content-end">
            <input class="btn btn-info" type="submit" />
          </div>
        </div>
      </div>
    </form>
    <!-- form end -->
  </body>
</html>