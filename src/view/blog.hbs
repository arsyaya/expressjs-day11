<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- cdn bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
    <!-- cdn fontawesome icon -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- bundle min js bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
    <title>Your Blog</title>
  </head>
  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand-lg bg-secondary">
      <div class="container">
        <img style="width: 50px" src="image/logo.png" alt="brand-logo" />
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-3">
            <li class="nav-item">
              <a
                class="nav-link me-2 fs-5 text-light"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link fw-bold fs-5 text-light active"
                href="/blog"
              >Blog</a>
            </li>
            <li class="nav-item">
              <a class="nav-link fs-5 text-light" href="/add-project">Add
                Project</a>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <a class="btn btn-info text-light" href="/contact">Contact Me</a>
          </form>
        </div>
      </div>
    </nav>
    <!-- navbar end -->

    <!-- list project -->
    <a
      class="btn btn-info text-light"
      style="margin-top: 20px !important; margin-left: 650px !important"
      href="/add-project"
    >+ Add New Blog</a>
    <div class="container d-flex mt-5" style="justify-content: center;">
      {{#each dataBlog}}
        <div class="card" style="width: 18rem">
          <img
            src="/image/blog-img-detail.png"
            class="card-img-top"
            alt="blog-image"
          />
          <div class="card-body">
            <a
              class="card-title fst-italic fw-bolder fs-5"
              href="/blog-detail/{{@index}}"
              style="text-decoration: none;"
            >
              {{this.name}}
            </a>
            <p class="mb-3 fw-light fs-10">{{this.postAt}}
              | -
              {{this.author}}
              -</p>
            <p style="text-align: justify">
              {{this.desc}}
            </p>
            <div class="blog-detail-icon mb-3">
              <a href="#"><i class="fa-brands fa-react"></i></a>
              <a href="#"><i class="fa-brands fa-node-js"></i></a>
              <a href="#"><i class="fa-brands fa-laravel"></i></a>
            </div>
            <div class="btn-group d-flex gap-2">
              <a
                class="btn btn-dark text-light"
                href="/blog-edit/{{@index}}"
              >Edit</a>
              <a
                class="btn btn-dark text-light"
                href="/delete-blog/{{@index}}"
              >Delete</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <!-- list project end -->
  </body>
</html>